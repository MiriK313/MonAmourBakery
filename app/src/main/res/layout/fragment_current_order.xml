<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/history_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הזמנות קודמות"
                android:layout_marginTop="20dp"
                app:cornerRadius="17dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_weight="4"
                android:background="@drawable/rounded"
                app:backgroundTint="@color/white"
                android:textSize="20dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/current_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הזמנה נוכחית"
                android:layout_marginTop="20dp"
                app:cornerRadius="17dp"
                android:textColor="@color/white"
                android:layout_weight="5"
                android:textStyle="bold"
                android:background="@drawable/rounded"
                app:backgroundTint="@color/purple_200"
                android:textSize="20dp"

                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_LST"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <RadioGroup
                android:id="@+id/delivery_orders_GRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/delivery_yes_orders_RDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="משלוח" />

                <RadioButton
                    android:id="@+id/delivery_no_orders_RDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="איסוף עצמי" />
            </RadioGroup>
            <EditText
                android:id="@+id/delivery_address_orders_TXT"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:gravity="center"
                android:hint="כתובת למשלוח"
                android:inputType="textPostalAddress"
                android:layoutDirection="rtl"
                android:maxLength="100"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textDirection="rtl"
                android:visibility="invisible">

            </EditText>
            <DatePicker
                android:id="@+id/date_orders_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:calendarTextColor="@color/white"
                android:calendarViewShown="false"
                android:datePickerMode="calendar" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_price_orders_LBL"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/purple_200"
                android:fontFamily="casual"
                android:text="לתשלום: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#95B429FF"
                >
            </com.google.android.material.textview.MaterialTextView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pay_orders_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הזמן"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                app:cornerRadius="17dp"
                android:textColor="#95B429FF"
                android:textStyle="bold"
                android:background="@drawable/rounded"
                app:backgroundTint="@color/white"
                android:textSize="20dp"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
