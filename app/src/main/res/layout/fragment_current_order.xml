<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/history_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הזמנות קודמות"
                android:layout_marginTop="20dp"
                app:cornerRadius="17dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_weight="4"
                android:background="@drawable/rounded"
                app:backgroundTint="@color/white"
                android:textSize="20dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/current_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הזמנה נוכחית"
                android:layout_marginTop="20dp"
                app:cornerRadius="17dp"
                android:textColor="@color/white"
                android:layout_weight="5"
                android:textStyle="bold"
                android:background="@drawable/rounded"
                app:backgroundTint="@color/purple_200"
                android:textSize="20dp"

                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_LST"
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:layout_marginStart="4dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/delivery_orders_GRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/delivery_yes_orders_RDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="משלוח" />

                <RadioButton
                    android:id="@+id/delivery_no_orders_RDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="איסוף עצמי" />
            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/special_delivery_note_TXT"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="ההזמנה תשלח למיקום בוא אתה נמצא"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#95FB0303"
                ></com.google.android.material.textview.MaterialTextView>

            <EditText
                android:id="@+id/date_EDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Date" />

            <TextView
                android:id="@+id/total_price_orders_LBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="4"
                android:ems="10"
                android:gravity="center"
                android:text="לתשלום: "
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pay_orders_BTN"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/rounded"
                android:text="הזמן"
                android:textAlignment="center"
                android:textColor="#95B429FF"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:cornerRadius="17dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
